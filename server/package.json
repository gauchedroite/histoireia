{
    "name": "histoireia-node",
    "version": "1.0.0",
    "description": "Express server for HistoireIA",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "npm run build:watch & npm run start:watch",
