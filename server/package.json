{
    "name": "histoireia-node",
    "version": "1.0.0",
    "description": "Express server for HistoireIA",
    "main": "dist/server.js",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "npm run watch:tsc & npm run watch:node",
        "watch:tsc": "tsc -w",
        "watch:node": "node --watch dist/server.js",
        "to:cjs": "node src/rename-to-cjs.js",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "express": "^4.18.2",
        "fs-extra": "^11.3.0"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.5",
        "@types/express": "^5.0.0",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^20.6.0",
        "typescript": "^5.2.0"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "license": "MIT"
}
