    },
    "devDependencies": {
        "@types/body-parser": "^1.19.5",
        "@types/express": "^5.0.0",
        "@types/node": "^20.6.0",
        "typescript": "^5.2.0"
    },
    "engines": {
        "node": ">=22.0.0"
    },
